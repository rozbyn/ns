{
	"manifest_version": 2,
	"name": "Скачать музыку VK - 2020",
	"description": "Расширение позволяет сохранить проигрываемый на сайте vk.com трек",
	"version": "1.2.0",
	"short_name": "Скачать музыку VK - 2020",
	
	"icons" : {
		"128": "icon128.png"
	},
	"browser_action": {
		"default_icon": "icon128-gray.png",
		"default_title": "Скачать музыку VK",
		"default_popup": "defpopup.html"
	},
	
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"content_scripts" : [
		{
			"js": ["contentScript.js"], 
			"matches": ["*://*.vk.com/*"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": ["pageScript.js", "info/findKeyInWindow.js"],
	"externally_connectable": {
		"matches": ["*://*.vk.com/*"]
	}
}